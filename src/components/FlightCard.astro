---
/**
 * FlightCard.astro
 *
 * Purpose: Display flight segment details in the Bookings page.
 *
 * Features:
 * - Route display with airport codes and city names
 * - Date and time information
 * - Flight number and duration
 * - Next day arrival indicator
 *
 * Props:
 * - flight: FlightSegment object from flights.json
 */

import Badge from "./Badge.astro";
import type { FlightSegment } from "../types/data";

interface Props {
  flight: FlightSegment;
}

const { flight } = Astro.props;

// Format time for display (24h to 12h conversion)
function formatTime(time: string): string {
  const [hours, minutes] = time.split(":");
  const hour = parseInt(hours, 10);
  const ampm = hour >= 12 ? "PM" : "AM";
  const displayHour = hour % 12 || 12;
  return `${displayHour}:${minutes} ${ampm}`;
}

// Format date for display
function formatDate(dateStr: string): string {
  const date = new Date(dateStr);
  return date.toLocaleDateString("en-US", {
    weekday: "short",
    month: "short",
    day: "numeric",
    year: "numeric",
  });
}

const formattedDate = formatDate(flight.date);
const departureTime = formatTime(flight.departureTime);
const arrivalTime = formatTime(flight.arrivalTime);
---

<article class="flight-card">
  <div class="flight-header">
    <Badge variant="info" size="md">{flight.flightNumber}</Badge>
    <span class="flight-date">{formattedDate}</span>
  </div>

  <div class="flight-route">
    <div class="route-point">
      <span class="airport-code">{flight.from}</span>
      <span class="city-name">{flight.fromCity}</span>
      <span class="time">{departureTime}</span>
    </div>

    <div class="route-line">
      <div class="line"></div>
      <svg class="plane-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
        <path d="M17.8 19.2L16 11l3.5-3.5C21 6 21.5 4 21 3c-1-.5-3 0-4.5 1.5L13 8 4.8 6.2c-.5-.1-.9.1-1.1.5l-.3.5c-.2.5-.1 1 .3 1.3L9 12l-2 3H4l-1 1 3 2 2 3 1-1v-3l3-2 3.5 5.3c.3.4.8.5 1.3.3l.5-.2c.4-.3.6-.7.5-1.2z"></path>
      </svg>
      <span class="duration">{flight.duration}</span>
    </div>

    <div class="route-point">
      <span class="airport-code">{flight.to}</span>
      <span class="city-name">{flight.toCity}</span>
      <span class="time">
        {arrivalTime}
        {flight.arrivalNextDay && <span class="next-day">+1</span>}
      </span>
    </div>
  </div>
</article>

<style>
  .flight-card {
    background-color: white;
    border-radius: var(--radius-card);
    padding: var(--spacing-4) var(--spacing-6);
    box-shadow: var(--shadow-card);
    transition: box-shadow 0.2s ease, transform 0.2s ease;
  }

  .flight-card:hover {
    box-shadow: var(--shadow-card-hover);
    transform: translateY(-2px);
  }

  .flight-header {
    display: flex;
    align-items: center;
    justify-content: space-between;
    margin-bottom: var(--spacing-4);
    padding-bottom: var(--spacing-3);
    border-bottom: 1px solid var(--color-border-light);
  }

  .flight-date {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
  }

  .flight-route {
    display: flex;
    align-items: center;
    justify-content: space-between;
    gap: var(--spacing-4);
  }

  .route-point {
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    min-width: 80px;
  }

  .route-point:first-child {
    align-items: flex-start;
    text-align: left;
  }

  .route-point:last-child {
    align-items: flex-end;
    text-align: right;
  }

  .airport-code {
    font-size: var(--font-size-2xl);
    font-weight: var(--font-weight-bold);
    color: var(--color-earth-900);
    line-height: 1;
  }

  .city-name {
    font-size: var(--font-size-sm);
    color: var(--color-text-secondary);
    margin: var(--spacing-1) 0;
  }

  .time {
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-medium);
    color: var(--color-earth-700);
    display: flex;
    align-items: center;
    gap: var(--spacing-1);
  }

  .next-day {
    font-size: var(--font-size-xs);
    font-weight: var(--font-weight-bold);
    color: white;
    background-color: var(--color-orange-500);
    padding: 2px 6px;
    border-radius: var(--radius-button);
  }

  .route-line {
    flex: 1;
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--spacing-1);
    position: relative;
  }

  .line {
    width: 100%;
    height: 2px;
    background: linear-gradient(
      to right,
      var(--color-earth-200),
      var(--color-earth-300),
      var(--color-earth-200)
    );
    position: relative;
  }

  .line::before,
  .line::after {
    content: "";
    position: absolute;
    top: 50%;
    transform: translateY(-50%);
    width: 8px;
    height: 8px;
    border-radius: 50%;
    background-color: var(--color-earth-400);
  }

  .line::before {
    left: 0;
  }

  .line::after {
    right: 0;
  }

  .plane-icon {
    color: var(--color-gold-600);
    margin: var(--spacing-1) 0;
  }

  .duration {
    font-size: var(--font-size-xs);
    color: var(--color-text-muted);
  }

  /* Responsive */
  @media (max-width: 767px) {
    .flight-card {
      padding: var(--spacing-4);
    }

    .flight-route {
      flex-direction: column;
      gap: var(--spacing-3);
    }

    .route-point {
      width: 100%;
      flex-direction: row;
      justify-content: space-between;
      align-items: center;
      text-align: left;
    }

    .route-point:first-child,
    .route-point:last-child {
      align-items: center;
      text-align: left;
    }

    .airport-code {
      font-size: var(--font-size-xl);
    }

    .route-line {
      width: 100%;
      flex-direction: row;
      justify-content: center;
    }

    .line {
      width: 60%;
    }

    .plane-icon {
      margin: 0 var(--spacing-2);
    }
  }
</style>
