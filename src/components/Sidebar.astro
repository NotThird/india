---
/**
 * Sidebar.astro
 *
 * Purpose: Fixed left sidebar navigation for desktop view.
 *
 * Features:
 * - Navigation links to all 6 pages
 * - Active page indicator using Astro.url.pathname
 * - Hidden on mobile (MobileMenu component used instead)
 *
 * Navigation Order: Home, Itinerary, Bookings, Packing List, Map, Shopping
 */

interface NavItem {
  label: string;
  href: string;
  icon: string;
  comingSoon?: boolean;
}

const navItems: NavItem[] = [
  { label: "Home", href: "/", icon: "home" },
  { label: "Itinerary", href: "/itinerary", icon: "calendar" },
  { label: "Bookings", href: "/bookings", icon: "plane" },
  { label: "Packing List", href: "/packing", icon: "list" },
  { label: "Map", href: "/map", icon: "map" },
  { label: "Shopping", href: "/shopping", icon: "shopping" },
  { label: "Travel Guide", href: "/guide", icon: "book" },
];

const currentPath = Astro.url.pathname;

/**
 * Determines if a nav item is active based on current path.
 * Handles both exact match (home) and prefix match (subpages).
 */
function isActive(href: string): boolean {
  if (href === "/") {
    return currentPath === "/";
  }
  return currentPath.startsWith(href);
}
---

<aside class="sidebar" aria-label="Main navigation">
  <div class="sidebar-header">
    <a href="/" class="logo-link">
      <span class="logo-icon">&#127758;</span>
      <div class="logo-text">
        <span class="logo-title">Chennai Trip</span>
        <span class="logo-subtitle">2026</span>
      </div>
    </a>
  </div>

  <nav class="sidebar-nav" role="navigation">
    <ul role="list">
      {
        navItems.map((item) => (
          <li>
            <a
              href={item.href}
              class:list={[
                "nav-link",
                { active: isActive(item.href) },
                { "coming-soon": item.comingSoon },
              ]}
              aria-current={isActive(item.href) ? "page" : undefined}
            >
              <span class="nav-icon" aria-hidden="true">
                {item.icon === "home" && (
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z" />
                    <polyline points="9 22 9 12 15 12 15 22" />
                  </svg>
                )}
                {item.icon === "calendar" && (
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <rect x="3" y="4" width="18" height="18" rx="2" ry="2" />
                    <line x1="16" y1="2" x2="16" y2="6" />
                    <line x1="8" y1="2" x2="8" y2="6" />
                    <line x1="3" y1="10" x2="21" y2="10" />
                  </svg>
                )}
                {item.icon === "plane" && (
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="M17.8 19.2 16 11l3.5-3.5C21 6 21.5 4 21 3c-1-.5-3 0-4.5 1.5L13 8 4.8 6.2c-.5-.1-.9.1-1.1.5l-.3.5c-.2.5-.1 1 .3 1.3L9 12l-2 3H4l-1 1 3 2 2 3 1-1v-3l3-2 3.5 5.3c.3.4.8.5 1.3.3l.5-.2c.4-.3.6-.7.5-1.2z" />
                  </svg>
                )}
                {item.icon === "list" && (
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <line x1="8" y1="6" x2="21" y2="6" />
                    <line x1="8" y1="12" x2="21" y2="12" />
                    <line x1="8" y1="18" x2="21" y2="18" />
                    <line x1="3" y1="6" x2="3.01" y2="6" />
                    <line x1="3" y1="12" x2="3.01" y2="12" />
                    <line x1="3" y1="18" x2="3.01" y2="18" />
                  </svg>
                )}
                {item.icon === "map" && (
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <polygon points="1 6 1 22 8 18 16 22 23 18 23 2 16 6 8 2 1 6" />
                    <line x1="8" y1="2" x2="8" y2="18" />
                    <line x1="16" y1="6" x2="16" y2="22" />
                  </svg>
                )}
                {item.icon === "shopping" && (
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <circle cx="9" cy="21" r="1" />
                    <circle cx="20" cy="21" r="1" />
                    <path d="M1 1h4l2.68 13.39a2 2 0 0 0 2 1.61h9.72a2 2 0 0 0 2-1.61L23 6H6" />
                  </svg>
                )}
                {item.icon === "book" && (
                  <svg
                    xmlns="http://www.w3.org/2000/svg"
                    width="20"
                    height="20"
                    viewBox="0 0 24 24"
                    fill="none"
                    stroke="currentColor"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  >
                    <path d="M4 19.5A2.5 2.5 0 0 1 6.5 17H20" />
                    <path d="M6.5 2H20v20H6.5A2.5 2.5 0 0 1 4 19.5v-15A2.5 2.5 0 0 1 6.5 2z" />
                  </svg>
                )}
              </span>
              <span class="nav-label">{item.label}</span>
              {item.comingSoon && <span class="coming-soon-badge">Soon</span>}
            </a>
          </li>
        ))
      }
    </ul>
  </nav>

  <div class="sidebar-footer">
    <p class="trip-dates">Jan 20 - Feb 5, 2026</p>
  </div>
</aside>

<!-- Mobile Header with Hamburger -->
<header class="mobile-header">
  <a href="/" class="mobile-logo">
    <span class="logo-icon">&#127758;</span>
    <span class="mobile-logo-text">Chennai Trip 2026</span>
  </a>
  <button
    id="mobile-menu-toggle"
    class="hamburger-button"
    aria-label="Open navigation menu"
    aria-expanded="false"
    aria-controls="mobile-menu"
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      width="24"
      height="24"
      viewBox="0 0 24 24"
      fill="none"
      stroke="currentColor"
      stroke-width="2"
      stroke-linecap="round"
      stroke-linejoin="round"
    >
      <line x1="3" y1="12" x2="21" y2="12"></line>
      <line x1="3" y1="6" x2="21" y2="6"></line>
      <line x1="3" y1="18" x2="21" y2="18"></line>
    </svg>
  </button>
</header>

<style>
  /* Desktop Sidebar */
  .sidebar {
    position: fixed;
    top: 0;
    left: 0;
    width: var(--sidebar-width);
    height: 100vh;
    background-color: var(--color-earth-800);
    color: var(--color-cream-100);
    display: flex;
    flex-direction: column;
    z-index: 100;
  }

  /* Sidebar Header */
  .sidebar-header {
    padding: var(--spacing-6);
    border-bottom: 1px solid var(--color-earth-700);
  }

  .logo-link {
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
    text-decoration: none;
    color: inherit;
  }

  .logo-link:hover {
    text-decoration: none;
  }

  .logo-icon {
    font-size: 1.75rem;
  }

  .logo-text {
    display: flex;
    flex-direction: column;
  }

  .logo-title {
    font-size: var(--font-size-lg);
    font-weight: var(--font-weight-semibold);
    color: var(--color-gold-400);
  }

  .logo-subtitle {
    font-size: var(--font-size-sm);
    color: var(--color-earth-400);
  }

  /* Navigation */
  .sidebar-nav {
    flex: 1;
    padding: var(--spacing-4) 0;
    overflow-y: auto;
  }

  .sidebar-nav ul {
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .nav-link {
    display: flex;
    align-items: center;
    gap: var(--spacing-3);
    padding: var(--spacing-3) var(--spacing-6);
    color: var(--color-cream-200);
    text-decoration: none;
    transition:
      background-color 0.15s ease,
      color 0.15s ease;
  }

  .nav-link:hover:not(.coming-soon) {
    background-color: var(--color-earth-700);
    color: var(--color-cream-50);
    text-decoration: none;
  }

  .nav-link.active {
    background-color: var(--color-gold-600);
    color: white;
    font-weight: var(--font-weight-medium);
  }

  .nav-link.active:hover {
    background-color: var(--color-gold-500);
  }

  /* Coming Soon Links - muted but navigable */
  .nav-link.coming-soon {
    color: var(--color-earth-500);
  }

  .nav-link.coming-soon:hover {
    background-color: var(--color-earth-700);
    color: var(--color-earth-400);
    text-decoration: none;
  }

  .coming-soon-badge {
    margin-left: auto;
    font-size: var(--font-size-xs);
    padding: 2px 6px;
    background-color: var(--color-earth-600);
    color: var(--color-earth-400);
    border-radius: var(--radius-button);
    text-transform: uppercase;
    letter-spacing: 0.05em;
  }

  .nav-icon {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    flex-shrink: 0;
  }

  .nav-label {
    flex: 1;
  }

  /* Sidebar Footer */
  .sidebar-footer {
    padding: var(--spacing-4) var(--spacing-6);
    border-top: 1px solid var(--color-earth-700);
  }

  .trip-dates {
    font-size: var(--font-size-sm);
    color: var(--color-earth-400);
    margin: 0;
  }

  /* Mobile Header */
  .mobile-header {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    height: 56px;
    background-color: var(--color-earth-800);
    padding: 0 var(--spacing-4);
    align-items: center;
    justify-content: space-between;
    z-index: 90;
  }

  .mobile-logo {
    display: flex;
    align-items: center;
    gap: var(--spacing-2);
    text-decoration: none;
    color: var(--color-gold-400);
  }

  .mobile-logo:hover {
    text-decoration: none;
  }

  .mobile-logo-text {
    font-size: var(--font-size-base);
    font-weight: var(--font-weight-semibold);
  }

  .hamburger-button {
    display: flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    color: var(--color-cream-100);
    border-radius: var(--radius-button);
    transition: background-color 0.15s ease;
  }

  .hamburger-button:hover {
    background-color: var(--color-earth-700);
  }

  /* Responsive: Hide sidebar on mobile, show mobile header */
  @media (max-width: 767px) {
    .sidebar {
      display: none;
    }

    .mobile-header {
      display: flex;
    }
  }
</style>
