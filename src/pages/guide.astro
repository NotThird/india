<BaseLayout title="Travel Guide" description="Essential guide for your Chennai trip - Tamil phrases, restaurants, cultural tips, and day-by-day suggestions">
  <section class="hero-section">
    <h1 class="page-title">Chennai Travel Guide</h1>
    <p class="page-subtitle">Everything you need to know for a smooth trip</p>
  </section>

  <!-- Quick Navigation -->
  <nav class="quick-nav">
    <a href="#tamil" class="nav-chip">Tamil Phrases</a>
    <a href="#restaurants" class="nav-chip">Restaurants</a>
    <a href="#cultural" class="nav-chip">Cultural Tips</a>
    <a href="#free-days" class="nav-chip">Day-by-Day Guide</a>
  </nav>

  <!-- Tamil Phrases Section -->
  <section id="tamil" class="guide-section">
    <h2 class="section-title">
      <span class="section-icon">üó£Ô∏è</span>
      Essential Tamil Phrases
    </h2>
    <p class="section-intro">You don't need to be fluent - these phrases will help you connect with locals and navigate daily situations.</p>

    <div class="phrases-grid">
      {Object.entries(tamilPhrases).map(([category, phrases]) => (
        <Card class="phrases-card">
          <h3 class="phrases-category">{category.charAt(0).toUpperCase() + category.slice(1)}</h3>
          <div class="phrases-list">
            {phrases.map((phrase) => (
              <div class="phrase-item">
                <div class="phrase-tamil">{phrase.tamil}</div>
                <div class="phrase-pronunciation">{phrase.pronunciation}</div>
                <div class="phrase-english">{phrase.english}</div>
              </div>
            ))}
          </div>
        </Card>
      ))}
    </div>

    <div class="tip-box">
      <strong>Pro Tip:</strong> Most people in Chennai understand English, especially in shops and restaurants. But trying even a few Tamil words will earn you smiles and possibly better prices!
    </div>
  </section>

  <!-- Restaurants Section -->
  <section id="restaurants" class="guide-section">
    <h2 class="section-title">
      <span class="section-icon">üçΩÔ∏è</span>
      Restaurant Recommendations
    </h2>
    <p class="section-intro">From street food to fine dining - the best places to eat near your venues.</p>

    <div class="restaurants-grid">
      {restaurants.map((restaurant) => (
        <Card class="restaurant-card">
          <div class="restaurant-header">
            <h3 class="restaurant-name">{restaurant.name}</h3>
            <span class="restaurant-price">{restaurant.priceRange}</span>
          </div>
          <div class="restaurant-area">{restaurant.area}</div>
          <div class="restaurant-cuisine">{restaurant.cuisine}</div>
          <div class="restaurant-musttry">
            <strong>Must Try:</strong> {restaurant.mustTry}
          </div>
          <div class="restaurant-note">{restaurant.note}</div>
        </Card>
      ))}
    </div>

    <div class="tip-box">
      <strong>Food Safety:</strong> Stick to busy restaurants, drink only bottled water, and avoid raw salads at street stalls. Your stomach will thank you!
    </div>
  </section>

  <!-- Cultural Tips Section -->
  <section id="cultural" class="guide-section">
    <h2 class="section-title">
      <span class="section-icon">üôè</span>
      Cultural Tips & Etiquette
    </h2>
    <p class="section-intro">Understanding local customs will help you navigate the wedding and your daily experiences.</p>

    <div class="cultural-grid">
      <Card class="cultural-card wedding">
        <h3 class="cultural-category">
          <span class="cultural-icon">üíç</span>
          Wedding Etiquette
        </h3>
        <ul class="cultural-list">
          {culturalTips.wedding.map((tip) => (
            <li>{tip}</li>
          ))}
        </ul>
      </Card>

      <Card class="cultural-card temple">
        <h3 class="cultural-category">
          <span class="cultural-icon">üõï</span>
          Temple Visits
        </h3>
        <ul class="cultural-list">
          {culturalTips.temple.map((tip) => (
            <li>{tip}</li>
          ))}
        </ul>
      </Card>

      <Card class="cultural-card general">
        <h3 class="cultural-category">
          <span class="cultural-icon">üåè</span>
          General Customs
        </h3>
        <ul class="cultural-list">
          {culturalTips.general.map((tip) => (
            <li>{tip}</li>
          ))}
        </ul>
      </Card>
    </div>
  </section>

  <!-- Day-by-Day Section -->
  <section id="free-days" class="guide-section">
    <h2 class="section-title">
      <span class="section-icon">üìÖ</span>
      Day-by-Day Suggestions
    </h2>
    <p class="section-intro">Ideas for your free days (non-wedding days). Adjust based on energy levels and interests!</p>

    <div class="days-timeline">
      {freeDays.map((day, index) => (
        <div class="day-card" style={`--delay: ${index * 0.1}s`}>
          <div class="day-header">
            <span class="day-date">{day.date}</span>
            <h3 class="day-title">{day.title}</h3>
          </div>
          <ul class="day-activities">
            {day.activities.map((activity) => (
              <li>{activity}</li>
            ))}
          </ul>
          <div class="day-tip">
            <strong>Tip:</strong> {day.tip}
          </div>
        </div>
      ))}
    </div>
  </section>

  <!-- Emergency Info -->
  <section class="guide-section">
    <h2 class="section-title">
      <span class="section-icon">üÜò</span>
      Emergency Information
    </h2>

    <div class="emergency-grid">
      <Card class="emergency-card">
        <h3>Emergency Numbers</h3>
        <ul class="emergency-list">
          <li><strong>Police:</strong> 100</li>
          <li><strong>Ambulance:</strong> 108</li>
          <li><strong>Fire:</strong> 101</li>
          <li><strong>Tourist Helpline:</strong> 1363</li>
        </ul>
      </Card>

      <Card class="emergency-card">
        <h3>US Embassy Chennai</h3>
        <ul class="emergency-list">
          <li><strong>Address:</strong> 220 Anna Salai</li>
          <li><strong>Phone:</strong> +91-44-2857-4000</li>
          <li><strong>Emergency:</strong> +91-44-2857-4242</li>
        </ul>
      </Card>

      <Card class="emergency-card">
        <h3>Hospitals Near Park Hyatt</h3>
        <ul class="emergency-list">
          <li><strong>Apollo Hospital:</strong> 044-2829-0200</li>
          <li><strong>Fortis Malar:</strong> 044-4289-2288</li>
        </ul>
      </Card>
    </div>
  </section>
</BaseLayout>

<style>
  .hero-section {
    text-align: center;
    padding: var(--spacing-8) 0;
    margin-bottom: var(--spacing-6);
  }

  .page-title {
    font-size: var(--font-size-4xl);
    color: var(--color-earth-900);
    margin: 0 0 var(--spacing-2) 0;
  }

  .page-subtitle {
    font-size: var(--font-size-lg);
    color: var(--color-text-secondary);
    margin: 0;
  }

  /* Quick Navigation */
  .quick-nav {
